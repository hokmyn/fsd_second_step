extends ../layout/main

block variables
    - var title = 'Ui-kit';
    - var description = 'Ui-kit';
    - var pageClass = 'uikit-page';    


block content    
    section.colors-and-type.page-section_colors
        +logo     
        .colors-list
            .colors-list__item
                +color-dark_item(100)
            .colors-list__item
                +color-dark_item(75)
            .colors-list__item
                +color-dark_item(50)
            .colors-list__item
                +color-dark_item(25)
            .colors-list__item                
                +color-dark_item(5)
            .colors-list__item
                +color_item("purple", "#BC9CFF")                
            .colors-list__item
                +color_item("green", "#6FCF97")
        .type-list
            .type-list__item
                +type_item("h1", "This one is sub-section or widget title")                
            .type-list__item
                +type_item("h2", "Next one is the item title inside widgets")
            .type-list__item
                +type_item("h3", "This is a label or cta text")
            .type-list__item
                +type_item("body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.")
    section.form-elements.page-section_form
        .form-elements__block1
            +text-field("small", "text field", "email", "form-element__input", "Email")
            +text-field("small", "text field", "email", "form-element__input form-element__input_hover","This is pretty awesome")
            .select_wrap
                +dropdown("small", "dropdown", "form-element__select", "Сколько гостей")
                +arrow-down
            +text-field("big", "masked text field", "text", "form-element__input form-element__input_date", "ДД.ММ.ГГГГ")
            +dropdown_date("big", "leftWrap", "date dropdown", "form-element__select form-element__select_date", "ДД.ММ.ГГГГ")
            +dropdown_date("big","rightWrap", "date dropdown", "form-element__select form-element__select_date", "19.08.2019")       
            +dropdown_date("big","rightWrap", "filter date dropdown", "form-element__select form-element__select_filter", "19 авг - 23 авг")
            +text-field("small", "subscription text field", "email", "form-element__input form-element__input_subscrition", "Email")
        .form-elements__block2
        .form-elements__block3
        .form-elements__block4
            
        .form-elements__block5
        .form-elements__block6
        .form-elements__block7
        .form-elements__block8


