extends ../layout/main

block variables
    - var title = 'Ui-kit';
    - var description = 'Ui-kit';
    - var pageClass = 'uikit-page';    


block content    
    section.colors-and-type.page-section_colors
        +logo     
        .colors-list
            .colors-list__item
                +color-dark_item(100)
            .colors-list__item
                +color-dark_item(75)
            .colors-list__item
                +color-dark_item(50)
            .colors-list__item
                +color-dark_item(25)
            .colors-list__item                
                +color-dark_item(5)
            .colors-list__item
                +color_item("purple", "#BC9CFF")                
            .colors-list__item
                +color_item("green", "#6FCF97")
        .type-list
            .type-list__item
                +type_item("h1", "This one is sub-section or widget title")                
            .type-list__item
                +type_item("h2", "Next one is the item title inside widgets")
            .type-list__item
                +type_item("h3", "This is a label or cta text")
            .type-list__item
                +type_item("body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.")
    section.form-elements.page-section_form
        .form-elements__block1
            div(class="text-field_smallMargin")
                +text-field("text field", "email", "form-element__input", "Email")
            div(class="text-field_smallMargin")
                +text-field("text field", "email", "form-element__input form-element__input_hover","This is pretty awesome")
            div(class = "select_wrap select_smallMargin" )
                +dropdown("dropdown", "form-element__select", "Сколько гостей")
                +arrow-down
            div(class="text-field_bigMargin")
                +text-field("masked text field", "text", "form-element__input form-element__input_date", "ДД.ММ.ГГГГ")
            div(class = "select_wrap select_bigMargin select_rightMargin")
                +dropdown_date("date dropdown", "form-element__select form-element__select_date", "ДД.ММ.ГГГГ")
            div(class = "select_wrap select_bigMargin")
                +dropdown_date("date dropdown", "form-element__select form-element__select_date", "19.08.2019")       
            div(class = "select_wrap select_bigMargin")
                +dropdown_date("filter date dropdown", "form-element__select form-element__select_mid", "19 авг - 23 авг")
            div(class="text-field_smallMargin text-field_rel")
                +text-field("subscription text field", "email", "form-element__input form-element__input_subscrition", "Email")
                +arrow-forward
        .form-elements__block2
            div(class = "select_bigMargin")
                span.form-element__text.title_margin checkbox buttons
                +checkbox_expanded("additional-options", "", 2, "Можно курить", "Можно с питомцами", "Можно пригласить гостей (до 10 человек)")
            div(class = "select_bigMargin")
                span.form-element__text.title_margin radio buttons
                .radio-list
                    +radio_items("Мужчина", "Женщина")
            div(class = "select_bigMargin")
                span.form-element__text.title_margin toggle
                .spec-offer
                    input(type="checkbox" id="offer_on" name="offer_on")
                    label(for="offer_on" class="form-element__offer-on_label form-element__offer_label number-information__text") Получать спецпредложения
                    br
                    input(type="checkbox" id="offer_off" name="offer_off")
                    label(for="offer_off" class="form-element__offer-off_label form-element__offer_label number-information__text") Получать спецпредложения
            div(class = "select_bigMargin")
                span.form-element__text.title_margin like button
                br
                .form-elements__like-buttons
                    +like_button(2, "", "favorite_border")
                    +like_button(12, "marked", "favorite")
            div(class = "select_bigMargin")
                span.form-element__text.title_margin rate button
                br
                .rate-buttons
                    .rate-buttons_left
                        +rate_buttons(4)
                    .rate-buttons_right
                        +rate_buttons(5)                 
        .form-elements__block3
        .form-elements__block4
            div(class = "select_wrap select_smallMargin" )
                +dropdown("dropdown", "form-element__select form-element__select_mid", "2 спальни, 2 кровати...")
                +arrow-down
            div(class = "select_wrap")
                +dropdown_expanded("dropdown", "2 спальни, 2 кровати...", "form-element__select_mid", "amenities-list", 0, "спальни", "кровати", "ванные комнаты")
            div(class = "select_wrap form-elements__checkboxes" )
                span.form-element__text expandable checkbox list
                +arrow-down
            div(class = "select_wrap select_bigMargin form-elements__checkboxes form-elements__checkboxes_expanded")
                label(for="form-elements__checkboxes__input_title" class="form-element__text form-elements__checkboxes_title") expandable checkbox list
                input(type="checkbox" id="checkboxes-item__input_title")
                +arrow-down
                +checkbox_expanded("additional-amenities", "", 1, "Завтрак", "Писменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь", "Телевизор", "Шампунь")
        .form-elements__block5
            div(class = "select_wrap select-guests_expanded")
                +dropdown_expanded("dropdown", "Сколько гостей", "form-element__select_big", "guests", 0, "взрослые", "дети", "младенцы")
            div(class="rich-checkbox")
                span.form-element__text.title_margin rich checkbox buttons
                +checkbox_expanded("accessibility", "label-access", 3, "Широкий коридор", "Помощник для инвалидов")(content0="fdff", content1="dfffd")
        .form-elements__block6
        .form-elements__block7
            div(class="number-information__list")
                +number-information__item("insert_emoticon", "Комфорт", "Шумопоглащающие стены")
                +number-information__item("location_city", "Удобство", "Окно в каждой из спален")
            
        .form-elements__block8


