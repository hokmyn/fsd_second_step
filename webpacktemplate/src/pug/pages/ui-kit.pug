extends ../layout/main

block variables
    - var title = 'Ui-kit';
    - var description = 'Ui-kit';
    - var pageClass = 'uikit-page';
    
block content    
    section.colors-and-type.page-section
        +logo     
        .colors-list
            .colors-list__item
                .colors-list__image.colors-list__image_shade100
                .colors-list__text
                    span.colors-list__title Dark Shade 100%
                    p #1F2041
            .colors-list__item
                .colors-list__image.colors-list__image_shade75
                .colors-list__text
                    span.colors-list__title Dark Shade 75%
                    p #1F2041
            .colors-list__item
                .colors-list__image.colors-list__image_shade50
                .colors-list__text
                    span.colors-list__title Dark Shade 50%
                    p #1F2041
            .colors-list__item
                .colors-list__image.colors-list__image_shade25
                .colors-list__text
                    span.colors-list__title Dark Shade 25%
                    p #1F2041
            .colors-list__item
                .colors-list__image.colors-list__image_shade5
                .colors-list__text
                    span.colors-list__title Dark Shade 5%
                    p #1F2041
            .colors-list__item
                .colors-list__image.colors-list__image_purple
                .colors-list__text
                    span.colors-list__title Purple
                    p #BC9CFF
            .colors-list__item
                .colors-list__image.colors-list__image_green
                .colors-list__text
                    span.colors-list__title Green
                    p #6FCF97
        .type-list
            .type-list__item
                .type-list__item_left.type-list__item_h1 h1
                .type-list__item_right.type-list__item_h1 This one is sub-section or widget title
            .type-list__item
                .type-list__item_left.type-list__item_h2 h2
                .type-list__item_right.type-list__item_h2 Next one is the item titleinside widgets
            .type-list__item
                .type-list__item_left.type-list__item_h3 h3
                .type-list__item_right.type-list__item_h3 This is a label or cta text
            .type-list__item
                .type-list__item_left.type-list__item_body Body
                .type-list__item_right.type-list__item_body This is the body text which is used for most of the design, like paragraphs, lists, etc.
