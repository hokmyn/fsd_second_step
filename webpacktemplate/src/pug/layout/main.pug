include ../utils/mixins
block variables

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title #{title}
        meta(name="description", content=description)
        block head

    body(class=pageClass)
        .wrapper
            if title !== 'Ui-kit'
                include ../includes/modules/header
            .content-wrapper
                block content
            if title !== 'Ui-kit'
                include ../includes/modules/footer
