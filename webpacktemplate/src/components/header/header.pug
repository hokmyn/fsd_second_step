//-
  options.listItems (array) - array of list items
  options.isAuth (bool) - guest authorized or not
  options.links (array) - array of list items links
  options.adds (array) - array of additional classes
  

include ../../components/logo/logo
include ../../components/menu/menu
include ../../components/button/button


mixin header(options)
    if !options
        - options = {}

    header.header
        +logo({imgType: 'h&f'})
        .standart-nav
            +menu({listItems: options.listItems, links: options.links, adds: options.adds})
            if options.isAuth
                .username Cosmin Negoita
            else
                .enter-buttons
                    +button({text: 'login', type: 'transp', size: ''})
                    +button({text: 'register', type: 'fill', size: ''})
